<Window x:Class="testing.MainWindow"
        x:Name="MyMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testing"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        MinWidth="{Binding WindowMinimumWidth}"
        MinHeight="{Binding WindowMinimumHeight}"
        Title="MainWindow" Height="720" Width="1080">
    <!--Start of window rendering.-->
    <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <!--Start of window rendering.-->
                        <Border Padding="{Binding OuterMarginSizeThickness, FallbackValue=00}">
                            <!--Main window putline (Use background tag for non-transparent).-->
                            <Grid>
                                <!-- Opacity mask for corners on grid -->
                                <Border x:Name="Container"
                                        Background="{StaticResource BackgroundLightBrush}"
                                        CornerRadius="{Binding WindowCornerRadius, FallbackValue=4}"/>
                                <!--Main window putline.-->
                                <Border CornerRadius="{Binding WindowCornerRadius, FallbackValue=4}"
                                        Background="{Binding ForegroundLightBrush, FallbackValue=White}">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" Opacity="0.2"/>
                                    </Border.Effect>
                                </Border>

                                <!--Main window putline.-->
                                <Grid>
                                    <!-- Corner clipping -->
                                    <Grid.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Container}"/>
                                    </Grid.OpacityMask>
                                    <Grid.RowDefinitions>
                                        <!-- Title Bar -->
                                        <RowDefinition Height="{Binding TitleHeightGridLength, FallbackValue=28}"/>
                                        <!-- Drop Shadow -->
                                        <RowDefinition Height="0"/>
                                        <!-- Window Content -->
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Row 0 : Title Bar-->
                                    <Grid  Grid.Row="0" Background="{StaticResource Nier_Menu0_Brush}" Panel.ZIndex="1">
                                        <Grid.ColumnDefinitions>
                                            <!-- Icon -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Title -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Windows Button -->
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Column 0 : Icon -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <!--Button Style="{StaticResource Hoverless}" Command="{Binding MenuCommand}"-->
                                            <Button Style="{StaticResource Hoverless}">
                                                <Image Source="/images/logo/applogo.ico"/>
                                            </Button>
                                            <Viewbox Margin="0" HorizontalAlignment="Center">
                                                <TextBlock Style="{StaticResource HeaderText}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title, FallbackValue='Welcome'}"/>
                                            </Viewbox>
                                        </StackPanel>


                                        <!-- Column 1 : Title (Viewbox restricts expansion) -->
                                        <StackPanel Grid.Column="1">
                                            <Viewbox Grid.Column="1" Margin="0" HorizontalAlignment="Center">
                                                <TextBlock Style="{StaticResource HeaderText}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title, FallbackValue='Welcome'}"/>
                                            </Viewbox>
                                        </StackPanel>


                                        <!-- Column 2 : Window buttons -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Command="{Binding MinimizeCommand}" Style="{StaticResource WindowControlButton}" Content="_"/>
                                            <Button Command="{Binding MaximizeCommand}" Style="{StaticResource WindowControlButton}" Content="[]"/>
                                            <Button Command="{Binding CloseCommand}" Style="{StaticResource W_CloseButton}" Content="x"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Row 2 : Post title. -->
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <!-- Workload list -->
                                            <ColumnDefinition Width="60"/>
                                            <!-- Main Content -->
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- START : Left Sidebar section -->
                                        <Grid Grid.Column="0">
                                            <Frame x:Name="SideBar_Home" Content="{Binding Sidebar_Home_Content, Converter={local:ApplicationPageValueConverter}}"/>
                                        </Grid>

                                        <Grid Height="Auto" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <!-- Workload list -->
                                                <RowDefinition Height="18"/>
                                                <!-- Main Content -->
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Menu Grid.Row="0" Background="{StaticResource NierDarkestBrush}" DockPanel.Dock="Top" Foreground="{StaticResource Nier_Level0_Brush}">
                                                <MenuItem VerticalAlignment="Center" HorizontalAlignment="Center" Header="_File">
                                                    <MenuItem  Header="_New" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Open" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Save" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <Separator />
                                                    <MenuItem Header="_Exit" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                </MenuItem>
                                                <MenuItem Header="_Edit">
                                                    <MenuItem Header="_New" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Open" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Save" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <Separator />
                                                    <MenuItem Header="_Exit" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                </MenuItem>
                                                <MenuItem Header="_View">
                                                    <MenuItem Header="_New" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Open" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Save" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <Separator />
                                                    <MenuItem Header="_Exit" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                </MenuItem>
                                                <MenuItem Header="_Tools">
                                                    <MenuItem Header="_Combine Textures" Foreground="{StaticResource Nier_Menu0_Brush}" Click="Start_TextureCombine"/>
                                                    <MenuItem Header="_OpenCV_Video" Foreground="{StaticResource Nier_Menu0_Brush}" Click="Start_OpenCVVideo"/>
                                                    <MenuItem Header="_Save" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <Separator />
                                                    <MenuItem Header="_Exit" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                </MenuItem>
                                                <MenuItem Header="_Help">
                                                    <MenuItem Header="_New" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Open" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_Save" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                    <MenuItem Header="_I need hug" Foreground="{StaticResource Nier_Menu0_Brush}" Click="SendHelp"/>
                                                    <Separator />
                                                    <MenuItem Header="_Exit" Foreground="{StaticResource Nier_Menu0_Brush}"/>
                                                </MenuItem>
                                            </Menu>
                                            <Border Grid.Row="1" Background="{StaticResource Nier_Level0_Brush}" Padding="{Binding InnerContentPadding, FallbackValue=0}">
                                                <ContentPresenter Content="{TemplateBinding Content}"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <!--Start of window rendering.-->
    <WindowChrome.WindowChrome>
        <WindowChrome 
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CaptionHeight="{Binding TitleHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Icon -->
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="69*"/>
            <!-- Title -->
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Right side dock -->
        <Border Padding="8" Grid.Column="2" Background="{StaticResource NierDarkestBrush}" Margin="0,0,0,0">
            <StackPanel>
                <TextBlock Text="Ambient Occlusion" FontWeight="Bold" Foreground="{StaticResource Nier_Level0_Brush}"></TextBlock>
                <TextBox Text="" Padding="2" Tag="Range: 0-255" ToolTip="Default Ambient Occlusion to assume, in case texture input is missing."></TextBox>
                <TextBlock Text="Roughness" FontWeight="Bold" Foreground="{StaticResource Nier_Level0_Brush}"></TextBlock>
                <TextBox Text="" Padding="2" Tag="Range: 0-255" ToolTip="Default roughness to assume, in case texture input is missing."></TextBox>
                <TextBlock Text="Metallic" FontWeight="Bold" Foreground="{StaticResource Nier_Level0_Brush}"></TextBlock>
                <TextBox Text="" Padding="2" Tag="Range: 0-255" ToolTip="Default metallic to assume, in case texture input is missing."></TextBox>
                <Slider Maximum="100" TickPlacement="BottomRight" TickFrequency="1" />
            </StackPanel>
        </Border>

        <!-- Page which displays info on our workload. -->
        <Frame Grid.Column="0" x:Name="Workspace_Home" Content="{Binding Workspace_Home_Content, Converter={local:WorkloadSectionValueConverter}}" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
